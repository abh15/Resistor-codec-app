<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="16dp"
        android:hapticFeedbackEnabled="true"
        android:text="Red"
        android:textColor="#FF0000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="21dp"
        android:hapticFeedbackEnabled="true"
        android:text="Brown"
        android:textColor="#663300" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button2"
        android:layout_marginTop="61dp"
        android:hapticFeedbackEnabled="true"
        android:text="Black"
        android:textColor="#000000"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginRight="20dp"
        android:hapticFeedbackEnabled="true"
        android:text="Blue"
        android:textColor="#0000CE" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/button7"
        android:layout_alignTop="@+id/button2"
        android:hapticFeedbackEnabled="true"
        android:text="Violet"
        android:textColor="#8D18AB" />

    <Button
        android:id="@+id/button9"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button8"
        android:hapticFeedbackEnabled="true"
        android:text="Grey"
        android:textColor="#808080" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:hapticFeedbackEnabled="true"
        android:text="Yellow"
        android:textColor="#FFFF00" />

    <Button
        android:id="@+id/button10"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/button7"
        android:hapticFeedbackEnabled="true"
        android:text="White"
        android:textColor="#F2F9F8" />

    <Button
        android:id="@+id/button11"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button10"
        android:layout_below="@+id/button10"
        android:layout_marginTop="16dp"
        android:hapticFeedbackEnabled="true"
        android:text="Gold"
        android:textColor="#FFD700" />

    <Button
        android:id="@+id/button12"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/button9"
        android:hapticFeedbackEnabled="true"
        android:text="Silver"
        android:textColor="#C0C0C0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button11"
        android:layout_marginTop="27dp"
        android:hapticFeedbackEnabled="true"
        android:text="Green"
        android:textColor="#36F200" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button9"
        android:layout_marginTop="20dp"
        android:hapticFeedbackEnabled="true"
        android:text="Orange"
        android:textColor="#FF9331" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button13"
        android:gravity="center|left"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toLeftOf="@+id/button7"
        android:gravity="left"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView2"
        android:gravity="center|right"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button10"
        android:layout_alignTop="@+id/button1"
        android:layout_toLeftOf="@+id/textView3"
        android:text="CALC" />

    <Button
        android:id="@+id/button17"
        android:layout_width="15dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/button11"
        android:layout_toRightOf="@+id/button13"
        android:text="T" />

    <Button
        android:id="@+id/button16"
        android:layout_width="15dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button6"
        android:layout_centerHorizontal="true"
        android:text="M" />

    <Button
        android:id="@+id/button15"
        android:layout_width="15dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button6"
        android:layout_toLeftOf="@+id/button16"
        android:text="B2" />

    <Button
        android:id="@+id/button18"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button12"
        android:layout_centerHorizontal="true"
        android:text="Reset" />

    <Button
        android:id="@+id/button14"
        android:layout_width="15dp"
        android:layout_height="55dp"
        android:layout_above="@+id/button6"
        android:layout_toLeftOf="@+id/button15"
        android:text="B1" />

</RelativeLayout>